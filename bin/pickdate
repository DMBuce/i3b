#!/usr/bin/bash
# date picker

# set environment variable defaults
# https://docs.gtk.org/Pango/pango_markup.html#the-span-attributes
PICKDATE_FORMAT="${PICKDATE_FORMAT-%F}"
PICKDATE_CAL="${PICKDATE_CAL-cal}"
PICKDATE_WEEKDAY_ATTRS="${PICKDATE_WEEKDAY_ATTRS-bgcolor='#285577' fgcolor='#fff' weight='bold'}"
default_themestr="configuration {
	kb-move-char-back: \"h,Left,Control+b\";
	kb-move-char-forward: \"l,Right,Control+f\";
	kb-row-up: \"k,Up,Control+p,ISO_Left_Tab\";
	kb-row-down: \"j,Down,Control+n\";
}"
PICKDATE_THEMESTR="${PICKDATE_THEMESTR-$default_themestr}"

# prints message to stderr
warn() {
	local message="$1"
	shift
	printf "$message\n" "$@" >&2
}

# prints error and exits
die() {
	[[ "$1" =~ ^[0-9]+$ ]] && { retval="$1"; shift; }
	warn "$@"
	exit ${retval-1}
}

# prints rofi selections from $days part of `cal` output
selections() {
	local days="$*"
	local w="$2"
	for i in {0..6}; do
		cut -c $((i*w+1))-$((i*w+w-1)) <<< "$days"
	done
}

# print usage
prog="${0##*/}"
usage="Usage: $prog [FORMAT] [DATE]

    Pick a date starting from DATE's month. FORMAT controls the output.

Environment Variables:

    PICKDATE_FORMAT:        The FORMAT to use. '%%F' by default.
    PICKDATE_CAL:           The calendar command to use. 'cal' by default.
    PICKDATE_WEEKDAY_ATTRS: The pango attributes to use on the weekday line.
    PICKDATE_THEMESTR:      Theme string used to override rofi's defaults.
"
if [[ "$*" == *--help* ]]; then
	die 0 "$usage"
fi

# parse args
if [[ -z "$ROFI_RETV" ]]; then
	export PICKDATE_FORMAT="${1-$PICKDATE_FORMAT}"
	export ROFI_INFO="$(date -d "${2-now}" +'%-Y-%-m')"
fi

# parse $ROFI_INFO
IFS=- read year month day junk <<< "$ROFI_INFO"
day="$(date +%-d)"

# adjust date if necessary
case "$ROFI_RETV" in
10) # rofi kb-custom-1: go to prev month
	year=$(( month-1 < 1 ? year-1 : year))
	month=$((month-1 < 1 ? 12     : month-1))
;;
11) # rofi kb-custom-2: go to next month
	year=$(( month+1 > 12 ? year+1 : year))
	month=$((month+1 > 12 ? 1      : month+1))
;;
esac

# get days of month
cal="$($PICKDATE_CAL $month $year)"
prompt="$(awk 'NR==1 {print}' <<< "$cal")"
weekdays="$(awk 'NR==2 {print}' <<< "$cal")"
days="$(awk 'NR>2 {print}' <<< "$cal")"
cellwidth=$(( (${#weekdays}+1) / 7 ))
#die 0 $cellwidth

# figure out how the script was called
case "$ROFI_RETV" in
"") # script called directly by user

	# set styling
	themestr="configuration {
		kb-custom-1: \"p\";
		kb-custom-2: \"n\";
	}
	$PICKDATE_THEMESTR
	window { width: $((${#weekdays}+2))ch; }
	listview { columns:7; lines:$(( $(wc -l <<< "$days") )); scrollbar: false; }
	inputbar { children: [prompt]; }
	"

	# run rofi
	selected="$(selections "$days" $cellwidth | cat -n | awk "/\s$day\s*$/ {print \$1 - 1}")"
	exec rofi -show date -modi "date:$prog" \
		-selected-row "$selected" \
		-theme-str "$themestr" \
		2>&1
;;
0) # rofi: initial call of script
;;
1) # rofi: selected an entry
	day="$1"
	date -d "$year-$month-$day" +"${PICKDATE_FORMAT#+}" >&2
	exit
;;
2) # rofi: selected a custom entry
	warn "Custom entry selected. This shouldn't happen."
	die "If you didn't explicityly set \$ROFI_RETV, please report as a bug!"
;;
esac

# set rofi options
echo -en "\0prompt\x1f$prompt\n"
echo -en "\0message\x1f<span $PICKDATE_WEEKDAY_ATTRS>$weekdays </span>\n"
echo -en "\0no-custom\x1ftrue\n"
echo -en "\0markup-rows\x1ftrue\n"
echo -en "\0use-hot-keys\x1ftrue\n"

# check if we're displaying current month
currentmonth=0
[[ "$year-$month" == $(date +'%-Y-%-m') ]] && currentmonth=1

# set rofi selections
#	active=$(echo "$selections" | awk "/^ *$day *$/ {print NR-1; exit}")
selections "$days" $cellwidth | awk "
	$currentmonth && /^\s*$day\s*$/ {print \"\0active\x1f\" NR-1}
	/[0-9]/    {printf \$0 \"\0info\x1f$year-$month\n\"}
	/[a-zA-Z]/ {printf \$0 \"\0info\x1f$year-$month\x1fnonselectable\x1ftrue\n\"}
	/^\s*$/    {printf \$0 \"\0info\x1f$year-$month\x1fnonselectable\x1ftrue\n\"}
"

